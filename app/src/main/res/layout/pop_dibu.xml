<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <RelativeLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa">

        <ImageView
            android:id="@+id/iv_show_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tv_commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_show_pic"
            android:text="酒红色纯红色纯羊毛西服套装"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_commodity_name"
            android:layout_toRightOf="@+id/iv_show_pic"
            android:text="￥390"
            android:textColor="#ff5001"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_shu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_commodity_name"
            android:layout_marginRight="15dp"
            android:text="库存:100件"
            android:textColor="#aaaaaa" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delect_goods"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="购买数量:"
            android:textColor="#aaaaaa" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delect_jian"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_se"
                android:gravity="center"
                android:text="-"
                android:layout_marginRight="5dp"
                android:textColor="#aaaaaa" />

            <Button
                android:id="@+id/delect_shu"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_se"
                android:gravity="center"
                android:text="1"
                android:textColor="#aaaaaa" />

            <Button
                android:id="@+id/delect_jia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_se"
                android:gravity="center"
                android:text="+"
                android:textColor="#aaaaaa"
                 />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:background="@drawable/button_se"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/jiaru"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/liji"
        android:text="加入购物车"/>
    <Button
        android:layout_alignParentRight="true"
        android:background="@drawable/button_se"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/liji"
        android:text="立即购买"/>
    </RelativeLayout>
</LinearLayout>